<p id="notice"><%= notice %></p>

<h1>Stadia</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>University</th>
      <th>Cep</th>
      <th>Street</th>
      <th>Number</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stadia.each do |stadium| %>
      <tr>
        <td><%= stadium.city %></td>
        <td><%= stadium.university %></td>
        <td><%= stadium.cep %></td>
        <td><%= stadium.street %></td>
        <td><%= stadium.number %></td>
        <td><%= stadium.state %></td>
        <td><%= link_to 'Show', stadium %></td>
        <td><%= link_to 'Edit', edit_stadium_path(stadium) %></td>
        <td><%= link_to 'Destroy', stadium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

